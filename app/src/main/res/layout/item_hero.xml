<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ripple"
    rv_centered="true"
    style="@style/Layout.FillWidth">

    <RelativeLayout
        android:id="@+id/test"
        style="@style/Layout.FillWidth"
        android:background="@drawable/hero_select">

        <LinearLayout
            style="@style/Layout.FillWidth"
            android:gravity="center"
            android:orientation="vertical">

            <chickenzero.ht.com.lienquan.customize.SquareImageView
                android:id="@+id/img_hero"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/txt_name"
                style="@style/Layout.FillWidth"
                android:layout_marginTop="@dimen/padding_small"
                android:gravity="center"
                android:textColor="@color/cmn_white"
                android:textSize="@dimen/text_normal" />

        </LinearLayout>

    </RelativeLayout>

</com.andexert.library.RippleView>