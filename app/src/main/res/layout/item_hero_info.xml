<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/Layout.FillWidth"
    android:layout_marginLeft="@dimen/padding_normal"
    android:layout_marginTop="@dimen/padding_small"
    android:paddingBottom="@dimen/padding_small">

    <TextView
        android:id="@+id/txt_title"
        app:layout_widthPercent="40%"
        android:textColor="@color/cmn_white"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_lv1"
        app:layout_widthPercent="20%"
        android:layout_toRightOf="@id/txt_title"
        android:gravity="center"
        android:textColor="@color/cmn_white"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_lv8"
        app:layout_widthPercent="20%"
        android:layout_toRightOf="@id/txt_lv1"
        android:gravity="center"
        android:textColor="@color/cmn_white"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_lv15"
        app:layout_widthPercent="20%"
        android:layout_toRightOf="@id/txt_lv8"
        android:gravity="center"
        android:textColor="@color/cmn_white"
        android:layout_height="wrap_content"/>

</android.support.percent.PercentRelativeLayout>